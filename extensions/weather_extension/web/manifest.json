{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "weather_extension",
    "description": "Weather extension is a simple extension that shows the weather in your current location",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "icons/icon-192.png",
            "32": "icons/icon-192.png",
            "48": "icons/icon-192.png",
            "128": "icons/icon-192.png"
        }
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self' ; object-src 'self'"
    },
    "permissions": [
        "geolocation"
    ]
}